version: 0.1
log:
  fields:
    service: registry
storage:
    cache:
        layerinfo: inmemory
    filesystem:
        rootdirectory: {{directory_registry}}
http:
    addr: {{ ansible_default_ipv4.address }}:5000
    tls:
        certificate: {{ path_cert }}
        key: {{ path_prvkey }}
auth:
    htpasswd:
             path: {{ path_auth }}
             realm: {{ common_name_registry }}
                  
